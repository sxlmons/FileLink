<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:clientPrototype="clr-namespace:"
             xmlns:client="clr-namespace:FileLink.Client"
             xmlns:fileOperations="clr-namespace:FileLink.Client.FileOperations"
             xmlns:directoryNav="clr-namespace:FileLink.Client.DirectoryNavigation"
             xmlns:views="clr-namespace:FileLink.Client.Views"
             Shell.NavBarIsVisible="False"
             x:Class="FileLink.Client.Pages.MainPage">
   
    <!-- We're using a 3-column layout:
       - Column 0: Left navigation menu
       - Column 1: Main content (Search, Categories, Recent Files)
       - Column 2: Right-hand panel (Add New Files, Storage, Favourites)-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />  <!-- Side Nav -->
            <ColumnDefinition Width="*" />    <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- ========== LEFT NAVIGATION ========== -->
        
        <Grid Grid.Column="0" 
            BackgroundColor="#3B2D79"
              RowDefinitions="Auto, *, Auto">
            
            <VerticalStackLayout Spacing="15" Grid.Row="0" Padding="20,0">
                <!-- App Title / Logo -->
                <Label 
                    Text="FileLink"
                    FontAttributes="Bold"
                    FontSize="28"
                    TextColor="White"
                    Margin="0,30,0,0"/>
                
                <!-- User Profile Section -->
                <Frame BackgroundColor="#4C3B8A"
                       CornerRadius="10"
                       HasShadow="False"
                       Padding="10"
                       HeightRequest="125"
                       WidthRequest="150">
                    <VerticalStackLayout>
                        <!-- Avatar placeholder -->
                        <Image Source="user_icon2.png" 
                               HeightRequest="75" 
                               WidthRequest="75"
                               HorizontalOptions="Center"
                               Aspect="AspectFit"/>
                        <!-- Display logged-in username -->
                        <Label 
                            x:Name="UserInfoLabel"
                            Text="Welcome Back!" 
                            TextColor="White"
                            HorizontalOptions="Center"
                            FontSize="14"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Navigation Buttons -->
                <VerticalStackLayout Spacing="10">
                    <Button x:Name="MyCloudButton"
                            Text="My Cloud" 
                            BackgroundColor="Transparent"
                            TextColor="White"
                            HorizontalOptions="Start" 
                            Clicked="MyCloudButton_Clicked"/>

                    <Button x:Name="FavouritesButton"
                            Text="Favourites" 
                            BackgroundColor="Transparent"
                            TextColor="White"
                            HorizontalOptions="Start" />
                    
                </VerticalStackLayout>
            </VerticalStackLayout>
            
            <BoxView BackgroundColor="Transparent"
                     Grid.Row="1"/>
            
            <VerticalStackLayout Grid.Row="2" Padding="20,20">
                <!-- Bottom Navigation -->
                <Button x:Name="AccountButton"
                        Text="Account" 
                        BackgroundColor="Transparent"
                        TextColor="White"
                        HorizontalOptions="Start"
                        Clicked="AccountButton_Clicked"/>

                <Button x:Name="StorageButton"
                        Text="Storage" 
                        BackgroundColor="Transparent"
                        TextColor="White"
                        HorizontalOptions="Start" 
                        Clicked="StorageButton_Clicked"/>
                
                <!-- Logout Button -->
                <Button 
                    x:Name="LogoutButton"
                    Text="Logout"
                    FontFamily="InterMedium"
                    FontSize="16"
                    BackgroundColor="#8175B5"
                    TextColor="White"
                    Clicked="LogoutButton_Clicked"
                    HorizontalOptions="Start"
                    Margin="0,20,0,0" />
                
                <!-- Status indicators for logout -->
                <ActivityIndicator 
                    x:Name="ActivitySpinner"
                    IsRunning="false"
                    IsVisible="false"
                    HorizontalOptions="Center" 
                    Color="White"/>
                
                <Label 
                    x:Name="StatusLabel"
                    Text=""
                    TextColor="White"
                    HorizontalOptions="Center"
                    IsVisible="False" />
            </VerticalStackLayout>
        </Grid>
        
        <!-- ========== MAIN CONTENT AREA ========== -->
        <Grid Grid.Column="1" Padding="20">
            <!-- Content Views for different sections -->
            <views:FilesView x:Name="FilesContentView" IsVisible="True" />
            <views:AccountView x:Name="AccountContentView" IsVisible="False" />
            <views:StorageView x:Name="StorageContentView" IsVisible="False" />
        </Grid>

        <!-- The right sidebar has been moved to FilesView.xaml -->
    </Grid>
</ContentPage>