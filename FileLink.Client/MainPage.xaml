<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:clientPrototype="clr-namespace:"
             xmlns:client="clr-namespace:FileLink.Client"
             x:Class="FileLink.Client.MainPage">

    <ContentPage.BindingContext>
        <ContentPage />
    </ContentPage.BindingContext>
    <!-- 
       We'll use a 3-column layout:
       - Column 0: Left navigation menu
       - Column 1: Main content (Search, Categories, Recent Files)
       - Column 2: Right-hand panel (Add New Files, Storage, Favourites)
    -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />  <!-- Side Nav -->
            <ColumnDefinition Width="*" />    <!-- Main Content -->
            <ColumnDefinition Width="270" />  <!-- Right Sidebar -->
        </Grid.ColumnDefinitions>

        <!-- ========== LEFT NAVIGATION ========== -->
        <VerticalStackLayout
            Grid.Column="0" 
            Padding="20,0"
            Spacing="20"
            BackgroundColor="#3B2D79">
            
            <!-- App Title / Logo -->
            <Label 
                Text="FileLink"
                FontAttributes="Bold"
                FontSize="22"
                TextColor="White"
                Margin="0,30,0,0"/>
            
            <!-- User Profile Section -->
            <Frame BackgroundColor="#4C3B8A"
                   CornerRadius="10"
                   HasShadow="False"
                   Padding="10"
                   HorizontalOptions="Fill">
                <VerticalStackLayout>
                    <!-- Your avatar image -->
                    <Image Source="avatar_placeholder.png" 
                           HeightRequest="50" 
                           WidthRequest="50"
                           HorizontalOptions="Center"
                           Aspect="AspectFit"/>
                    <Label 
                        Text="Welcome Back, Joshua!" 
                        TextColor="White"
                        HorizontalOptions="Center"
                        FontSize="14"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Navigation Buttons -->
            <VerticalStackLayout Spacing="10">
                <Button Text="My Cloud" 
                        BackgroundColor="Transparent"
                        TextColor="White"
                        HorizontalOptions="Start" />

                <Button Text="Favourites" 
                        BackgroundColor="Transparent"
                        TextColor="White"
                        HorizontalOptions="Start" />

                <Button Text="Upload Files" 
                        BackgroundColor="Transparent"
                        TextColor="White"
                        HorizontalOptions="Start" />

                <Button Text="Ernesto Chat" 
                        BackgroundColor="Transparent"
                        TextColor="White"
                        HorizontalOptions="Start" />
            </VerticalStackLayout>

            <!-- Spacer (push Account & Settings to bottom) -->
            <VerticalStackLayout VerticalOptions="EndAndExpand" />

            <!-- Bottom Navigation -->
            <Button Text="Account" 
                    BackgroundColor="Transparent"
                    TextColor="White"
                    HorizontalOptions="Start" />

            <Button Text="Settings" 
                    BackgroundColor="Transparent"
                    TextColor="White"
                    HorizontalOptions="Start" />
        </VerticalStackLayout>


        <!-- ========== MAIN CONTENT AREA ========== -->
        <ScrollView Grid.Column="1" Padding="20">
            <VerticalStackLayout Spacing="20">

                <!-- Search Bar -->
                <SearchBar Placeholder="Search..."
                           BackgroundColor="White"
                           HeightRequest="40"/>
                           
                <!-- Categories -->
                <Label Text="Categories"
                       FontAttributes="Bold"
                       FontSize="16"
                       TextColor="#333"/>
                       
                <HorizontalStackLayout Spacing="10">
                    <Frame CornerRadius="6"
                           WidthRequest="120"
                           HeightRequest="110"
                           BackgroundColor="#7B6FBE"
                           Padding="10">
                        <VerticalStackLayout>
                            <Label Text="Documents" 
                                   TextColor="#E8F0FF"
                                   FontAttributes="Bold"
                                   FontSize="14"/>
                            <Label Text="456 Files" 
                                   TextColor="#E8F0FF"
                                   FontSize="12"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame CornerRadius="6"
                           WidthRequest="120"
                           HeightRequest="110"
                           BackgroundColor="#BE6F6F"
                           Padding="10">
                        <VerticalStackLayout>
                            <Label Text="Pictures" 
                                   TextColor="#E8F0FF"
                                   FontAttributes="Bold"
                                   FontSize="14"/>
                            <Label Text="201 Files" 
                                   TextColor="#E8F0FF"
                                   FontSize="12"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame CornerRadius="6"
                           WidthRequest="120"
                           HeightRequest="110"
                           BackgroundColor="#6FB6BE"
                           Padding="10">
                        <VerticalStackLayout>
                            <Label Text="Videos" 
                                   TextColor="#E8F0FF"
                                   FontAttributes="Bold"
                                   FontSize="14"/>
                            <Label Text="34 Files"
                                   TextColor="#E8F0FF"
                                   FontSize="12"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame CornerRadius="6"
                           WidthRequest="120"
                           HeightRequest="110"
                           BackgroundColor="#BEAC6F"
                           Padding="10">
                        <VerticalStackLayout>
                            <Label Text="School" 
                                   TextColor="#E8F0FF"
                                   FontAttributes="Bold"
                                   FontSize="14"/>
                            <Label Text="375 Files"
                                   TextColor="#E8F0FF"
                                   FontSize="12"/>
                        </VerticalStackLayout>
                    </Frame>
                    
                    <Frame CornerRadius="6"
                           WidthRequest="120"
                           HeightRequest="110"
                           BackgroundColor="#E8F0FF"
                           Padding="10">
                        <VerticalStackLayout>
                            <Label Text="Add New Category"
                                   TextColor="#4C3B8A"
                                   FontAttributes="Bold"
                                   FontSize="14"/>
                            <Label/>
                        </VerticalStackLayout>
                    </Frame>
                </HorizontalStackLayout>

                <!-- Recent Files -->
                <Label Text="Recent Files"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="#333"/>
                       
                <!-- 
                    Use a CollectionView or ListView for a scrollable list of "recent files". 
                    For brevity, here’s a simple CollectionView with static items. 
                -->
                <!-- CollectionView of Recent Files -->
                <CollectionView ItemsSource="{Binding RecentFiles}">
                    <!-- Define a vertical layout with 10 pixels of spacing between items -->
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="10" />
                    </CollectionView.ItemsLayout>
                    
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <!-- Each file is shown in a Frame with corner radius -->
                            <Frame CornerRadius="6"
                                   Padding="10"
                                   Margin="0,5"
                                   BackgroundColor="#FFFFFF">
                                <HorizontalStackLayout Spacing="10">
                                    <!-- Colored square for category -->
                                    <BoxView WidthRequest="20"
                                             HeightRequest="20"
                                             CornerRadius="8"
                                             BackgroundColor="White"
                                             Color="{Binding CategoryColor}" />

                                    <!-- File info -->
                                    <VerticalStackLayout>
                                        <Label Text="{Binding FileName}"
                                               FontAttributes="Bold"
                                               FontSize="14" />
                                        <Label Text="{Binding FileSize}"
                                               FontSize="12" />
                                    </VerticalStackLayout>
                                </HorizontalStackLayout>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>


        <!-- RIGHT SIDEBAR -->
        <ScrollView Grid.Column="2" Padding="20">
            <VerticalStackLayout Spacing="20">

                <!-- Add New Files -->
                <Frame Padding="20" CornerRadius="10" BackgroundColor="White">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Add New Files" 
                               FontAttributes="Bold"
                               FontSize="16"/>
                        <Button Text="Upload" 
                                BackgroundColor="#4C3B8A" 
                                TextColor="White"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Storage Info -->
                <Frame Padding="20" CornerRadius="10" BackgroundColor="White">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Your Storage"
                               FontAttributes="Bold" 
                               FontSize="16"/>
                        <Label Text="125GB used of 250GB" FontSize="12"/>
                        <ProgressBar Progress="0.5" />
                        <Label Text="50% Left"
                               FontSize="12"
                               HorizontalOptions="End"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Favourites -->
                <Frame Padding="20" CornerRadius="10" BackgroundColor="White">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Favourites"
                               FontAttributes="Bold"
                               FontSize="16"/>
                        <!-- Just a couple static placeholders -->
                        <Label Text="May_26th_Photo (JPEG)" FontSize="12"/>
                        <Label Text="School_Project (Word Doc)" FontSize="12"/>
                    </VerticalStackLayout>
                </Frame>
                
            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>