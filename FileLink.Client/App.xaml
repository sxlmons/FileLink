<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FileLink.Client"
             xmlns:converters="clr-namespace:FileLink.Client.Converters"
             x:Class="FileLink.Client.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Value converters -->
            <converters:ProgressConverter x:Key="ProgressConverter" />
            <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
            <converters:FileSizeDisplayConverter x:Key="FileSizeDisplayConverter" />
            <converters:BoolToBackgroundConverter x:Key="BoolToBackgroundConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>